<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/img_estab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:textColor="#212121"
        android:layout_toRightOf="@+id/img_estab"
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />

    <TextView
        android:textColor="#212121"
        android:layout_below="@+id/tv_nome"
        android:layout_alignLeft="@+id/tv_nome"
        android:id="@+id/tv_cnpj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:background="@color/colorPrimary" />


    <TextView
        android:id="@+id/tvlabelagencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_agencia"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:text="Agencias: "
        android:textColor="#212121"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_agencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/img_estab"
        android:layout_marginStart="11dp"
        android:layout_marginTop="27dp"
        android:paddingRight="16dp"
        android:text="Nome Agencias"
        android:textColor="#212121"
        android:textSize="14sp" />


</RelativeLayout>
